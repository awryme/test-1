<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    tools:context="com.example.andreyko0.myapplication.AddProductActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/empty_parameters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="@string/parameters_empty"
            android:textColor="#ff0000"
            android:textSize="20sp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_description"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/item_description"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/cpb_blue"
            android:hint="@string/prompt_name_product"
            android:inputType="text"
            android:maxLines="1" />

        <EditText
            android:id="@+id/item_description"
            android:layout_width="match_parent"
            android:layout_height="121dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/item_name"
            android:layout_marginTop="16dp"
            android:layout_weight="0.01"
            android:backgroundTint="@color/cpb_blue"
            android:hint="@string/prompt_description_product"
            android:inputType="textMultiLine"
            android:maxLines="6"
            android:scrollbars="vertical" />

        <EditText
            android:id="@+id/item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/item_description"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/cpb_blue"
            android:hint="Price"
            android:inputType="number" />


        <com.dd.CircularProgressButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom"
            android:onClick="buttonOnClick"
            app:cpb_textComplete="Complete"
            app:cpb_textError="Failed"
            app:cpb_textIdle="Submit" />

        <Button
            android:id="@+id/select_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/empty_parameters"
            android:layout_alignRight="@+id/empty_parameters"
            android:layout_below="@+id/item_price"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="18dp"
            android:onClick="onImageGalleryClicked"
            android:text="Button" />

        <ImageView
            android:id="@+id/imgPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/empty_parameters"
            android:layout_alignStart="@+id/empty_parameters"
            android:layout_alignTop="@+id/select_photo"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="6dp"
            app:srcCompat="@drawable/cpb_background" />


