<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.application">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/> -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.HSEOutlet"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.activities.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop"
            android:icon="@mipmap/ic_launcher"
            android:roundIcon="@mipmap/ic_launcher_round">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!--
                Эти метаданные говорят, что в этой активти можно открыть диалог поиска,
                 и в какую активити будет напрвлен запрос с этого диалога -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value="com.example.activities.SearchActivity"/>
        </activity>

        <activity android:name="com.example.activities.ProductActivity" />
        <activity android:name="com.example.activities.entry.EntryFormActivity" />
        <activity android:name="com.example.activities.entry.RegistrationFormActivity" />
        <activity android:name="com.example.activities.FullScreenImageActivity">

            <!-- android:theme="@android:style/Theme.Holo.NoActionBar"> -->
        </activity>
        <activity android:name="com.example.activities.AddProductActivity" />
        <activity android:name="com.example.activities.UserPageActivity" />


        <activity android:name="com.example.activities.SearchActivity"
            android:label="@string/app_name">
            <!--
                Говорим, что эта активити может принимать запросы на поиск (для диалога поиска)
                Говорим, что она же может обрабатывать текст (для контекстного меню при выделении)-->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <action android:name="android.intent.action.PROCESS_TEXT"/>
                <data android:mimeType="text/plain" />

            </intent-filter>

            <!--
                Показываем, что этак активити может искать-->
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
            <!--
                Для верхней кнопки назад, говрим, чтоб возаращала в ScrollingActivity-->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.activities.ScrollingActivity" />
                <!--android:resource="x"-->
        </activity>


    </application>

</manifest>