                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.activities.ProductActivity" />
        <activity android:name="com.example.s1k0de.entry.EntryFormActivity" />
        <activity android:name="com.example.s1k0de.entry.RegistrationFormActivity" />
        <activity android:name="com.example.activities.FullScreenImageActivity">

            <!-- android:theme="@android:style/Theme.Holo.NoActionBar"> -->
        </activity>
        <activity android:name="com.example.activities.AddProductActivity" />
        <activity android:name="com.example.activities.UserPageActivity"></activity>
    </application>

</manifest>